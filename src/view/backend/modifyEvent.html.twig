
{% extends "frontend/base.html.twig" %}

{% block title %}Modification des évènements{% endblock %}
{% block body %}
  
  {{ include('backend/backnavbar.html.twig') }} 
  <br>
  <br>
<section class="tab2">
    <div class="container text-center">        
        <h2>Modifier l'évènement </h2>                              
    </div>
    <section>
          <div class = container  id="post">          
            <form action="/changeEvent/{{event.id}}" method="post">
              <div class="form-group">
              <label for="title">Titre:</label>
              <input type="text" class="form-control" id="title" name="title" value ="{{event.title}}">
              </div>
                <div class="form-group">
                    <label for="content">Contenu:</label>
                    <textarea  class="form-control" id="mytextarea" name="content">{{event.states}}</textarea>
                </div>
                    <button type="submit" class="btn btn-primary">Envoyer</button>
            </form>
          </div>
        <div class="container text-center">        
           <h2>Supprimer l'évènement </h2>                               
             <form action="/supprimEvent/{{event.id}}" method="post" >
              <button type="submit" class="btn btn-danger">Supprimer</button>
             </form>
        </div>
    </section>
</section> 
{% block javascripts %}
<script src='/public/js/tinymce/tinymce.min.js'></script>
<script>
tinymce.init({
  selector: '#mytextarea'    
});
</script>
{% endblock %}
  {% endblock %}
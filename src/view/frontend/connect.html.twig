{% extends "frontend/base.html.twig" %}
{% block title %}Home{% endblock %}
{% block body %}
{{ include('frontend/navbar.html.twig') }}
<br>
<section class="container" id = "controle">
    <div class="row">
        <div class ="col-lg-12 text-center"> <h2>Bonjour , contrôle d'identité!</h2></div>
            <div class="container text-center"><p>Tapez votre nom et votre  mot de passe , merci:</p> </div>
               <div class ="container text-center">
                          <form method="post" id="authentication-form">
                              <div class="form-group">
                                  <label for="name">Nom:</label>
                                  <input type="text" class="form-control" id="usr" name="name" required>
                              </div>
                              <div class="form-group">
                                  <label for="pwd">Mot de passe :</label>
                                  <input type="password" class="form-control" id="pwd" name="pass"required >
                              </div>
                                  <button type="submit" class="btn btn-primary">Envoyer</button>
                          </form>
                          <br>
                 <div class="alert alert-danger">Identifiants invalides</div>
               </div>
    </div>
  </section>
  <br>
{% endblock %}

{% extends "frontend/base.html.twig" %}
{% block title %}page des articles{% endblock %}
{% block body %}
  {{ include('frontend/navbar.html.twig') }}
  <br>
  <section class="container" id="artvue">
    <br>
    <div class="row">
      <div class="col-lg-12 " id="tableau_articles">
        <table class="table table-bordered table-hover table-stiped">
          <thead>
          <tr class="text-center">
            <th class="col-xs-2  col-sm-2 col-lg-4">Les Articles</th>
            <th class=" col-xs-2 col-sm-2 col-lg-4">Les Dates</th>
          </tr>
          </thead>
          <tbody>
          {% for article in pageart %}
            <tr class="text-center">
              <td><a href="/article/{{ article.id }}">{{ article.title }}</a></td>
              <td> Datant du :{{ article.creation_date|date('d/m/Y') }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
        <ul class="pagination justify-content-center">
          <li class=" {% if offset == 0 %} disabled {% endif %}   page-item"><a class="page-link"
                                                                                href="/les_articles?offset={{ prevoffset }}&limit=3">Prev</a>
          </li>
          {% for i in 1..nbpages %}
            <li class=" {% if offset == (i-1)*3 %} active {% endif %}        page-item"><a class="page-link"
                                                                                           href="/les_articles?offset={{ (i-1)*3 }}&limit=3">{{ loop.index }}</a>
            </li>
          {% endfor %}
          <li class=" {% if offset >= nbarticles-limit %} disabled {% endif %}  page-item"><a class="page-link"
                                                                                              href="/les_articles?offset={{ nextoffset }}&limit=3">Next</a>
          </li>
        </ul>
      </div>
    </div>
  </section>
{% endblock %}

{% extends "frontend/base.html.twig" %}
{% block title %}page des évènements{% endblock %}
{% block body %}
  {{ include('frontend/navbar.html.twig') }}
  <br>
  <section class="container" id="artvue">
    <br>
    <div class="row">
      <div class="col-lg-12 " id="tableau_events">
        <table class="table table-bordered table-hover table-stiped">
          <thead>
          <tr class="text-center">
            <th class="col-xs-2  col-sm-2 col-lg-4">Les Evenements</th>
            <th class=" col-xs-2 col-sm-2 col-lg-4">Les Dates</th>
          </tr>
          </thead>
          <tbody>
          {% for event in pageev %}
            <tr class="text-center">
              <td><a href="/event/{{ event.id }}">{{ event.title }}</a></td>
              <td> Datant du :{{ event.event_date|date('d/m/Y') }}</td>
            </tr>
          {% endfor %}
          </tbody>
        </table>
        <ul class="pagination justify-content-center">
          <li class=" {% if offset == 0 %} disabled {% endif %} page-item"><a class="page-link"
                                                                              href="/les_events?offset={{ prevoffset }}&limit=2">Prev</a>
          </li>
          {% for i in 1..nbpages %}
            <li class=" {% if offset == (i-1)*2 %} active {% endif %} page-item"><a class="page-link"
                                                                                    href="/les_events?offset={{ (i-1)*2 }}&limit=2">{{ loop.index }}</a>
            </li>
          {% endfor %}
          <li class=" {% if offset >= nbevents-limit %} disabled {% endif %} page-item"><a class="page-link"
                                                                                           href="/les_events?offset={{ nextoffset }}&limit=2">Next</a>
          </li>
        </ul>
      </div>
    </div>
  </section>
  </section>
{% endblock %}
